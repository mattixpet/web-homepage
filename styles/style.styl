@import 'nib'
//@import url('//fonts.googleapis.com/css?family=Ubuntu|Bitter')
global-reset() // Nib provides a CSS reset

// variables 
link-color = yellow
link-hover-color = yellow //#00b8e6 <-- cyan that sorta works
background-color = black
text-color = yellow
main-width = 800px
icon-height = 32px
icon-width = 32px
// social-width = number of icons * icon-width
social-width = 128px
social-height = 64px
// translate-width = number of translations * translation-icon-width
translation-icon-width = 40px
translation-icon-height = 24px
translate-width = 128px
translate-height = translation-icon-height

*
  box-sizing border-box

body
  background background-color
  font-family Helvetica, sans-serif
  color text-color

main
  margin 0 auto
  max-width main-width
  margin-top 1%

div.social
  width social-width
  height social-height
  margin-right 1%
  ul
    li.twitter a
      background-image url("../img/social/twitter.png")
    li.facebook a
      background-image url("../img/social/facebook.png")
    li.linkedin a
      background-image url("../img/social/linkedin.png")
    li.instagram a
      background-image url("../img/social/instagram.png")
    li.email a
      background-image url("../img/social/email.png")
    li.googleplus a
      background-image url("../img/social/googleplus.png")
    //li.snapchat a
    //  background-image url("../img/social/snapchat.png")
    li.github a
      background-image url("../img/social/github.png")
    li.skype a
      background-image url("../img/social/skype.png")
    li a
      width icon-width
      height icon-height
div.social, div.translate
  float right
  display block
  ul
    li a
      opacity 0.9
      float left
      text-indent 110% /* hide text */
      overflow hidden
      whitespace nowrap
      background-size contain
    li a:hover
      opacity 1
div.translate
  width translate-width
  height translate-height
  ul
    li.is a
      /* http://upload.wikimedia.org/wikipedia/commons/0/09/Light_Blue_Flag_of_Iceland.svg */
      background-image url("../img/trans/is.svg")
    li.en a
      /* http://upload.wikimedia.org/wikipedia/en/a/a4/Flag_of_the_United_States.svg */
      background-image url("../img/trans/en.svg")
    li a
      float right
      width translation-icon-width
      height translation-icon-height
      background-repeat no-repeat
      background-size translation-icon-width translation-icon-height

// double sized icons!! for social bar
@import 'doubleicons.styl'

ul.mainlist
  li:hover
    opacity 1
  a:hover
    color link-color /* don't change colors for hover on image links */
  li
    opacity 0.95
    background-size cover
    position relative
    display table
    width 100%
    height 150px
    .text
      display table-cell
      vertical-align middle
      text-align center
      font-size 4em
      text-shadow 3px 3px 1px darken(link-color, 50%)
      letter-spacing 0.1em
    /* http://stackoverflow.com/questions/796087/make-a-div-into-a-link */
    span
      position absolute
      width 100%
      height 100%
      top 0
      left 0
      /* edit: added z-index */
      z-index 1
      /* edit: fixes overlap error in IE7/8, 
         make sure you have an empty gif */
      background-image url('../img/empty.gif')

ul.mainlist
  #soundcloud 
    background-image url("../img/soundcloud.png") /* ../img means get out of static/css and into static/img */
  #projects
    background-image url("../img/projects.png")
  #programming
    background-image url("../img/programming.png")
  #groovymacgames
    background-image url("../img/groovymacgames.png")
  #blog
    background-image url("../img/blog.png")
  #oldyoutube
    background-image url("../img/oldyoutube.png")
  #iowa
    background-image url("../img/iowa.png")
  #littlemadra
    background-image url("../img/littlemadra.png")

#chat
  //display none //- until we figure out the server thingy..
  padding 0 0.1em 0 0
  width 15%
  float right
  clear both
  margin-top 2em
  #chatcontent
    margin 0.2em 0 0.2em 0
    border-top 1px solid text-color
    border-bottom 1px solid text-color
    height 200px
    overflow-y scroll
  input[type="text"]
    width 50px
    background background-color
    color text-color
  input[type="button"]
    background-color background-color
    color text-color

.smallwrap
  margin 5% 1% 0 0.5%

footer
  margin 2em auto 0.5em auto
  max-width 800px
  height 1.2em
footer .container > *
  padding 0 3% 0 0.5%
footer .container > .translate
  padding 0

a
  color link-color
  text-decoration none
a:hover
  color link-hover-color

.hidden
  display none

/* media queries */
@media only screen and (max-width: 500px) {
  ul.mainlist li .text {
    font-size 3em
    letter-spacing 0.09em
  }
}
@media only screen and (max-width: 1100px) { // needs to be changed with more icons!!!!
  div.social {
    /* turn the | | | | social bar to
       | |
       | |
       | | */
    width social-height
    height social-width
  }
  /* double sized icons!! for social bar
     make sure not to change anything with above command */
  @import 'doubleicons.styl'
}
@media only screen and (max-width: 970px) {
  /* change from | | | | social bar
                 | | | |
     to | | | | | | | */
  div.social {
    float none
    width social-width + social-width // assuming equal number of icons in each row
    height icon-width
    margin 0 auto
  }
  /* double sized icons!! for social bar
     make sure not to change anything with above command */
  @import 'doubleicons.styl'
}
@media only screen and (max-width: 1234px) { 
  #chat {
    float none
    margin 0 auto
    width 100%
    max-width main-width
  }
}